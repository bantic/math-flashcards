<div class="clock">
  {{this.elapsed}}
</div>
<div class="options">
  <button
    type="button"
    class="{{if this.optionsMult "active"}}"
    {{on "click" (fn this.toggleOption "mult")}}
  >
    *
  </button>
  <button
    type="button"
    class="{{if this.optionsAdd "active"}}"
    {{on "click" (fn this.toggleOption "add")}}
  >
    +
  </button>
  <button
    type="button"
    class="{{if this.optionsSubtract "active"}}"
    {{on "click" (fn this.toggleOption "subtract")}}
  >
    -
  </button>
</div>
<div class="problem">
  <div class="first">
    {{this.first}}
  </div>
  <div class="operator">
    {{this.op}}
  </div>
  <div class="second">
    {{this.second}}
  </div>

  <div class="solution" {{on "click" this.reveal}}>
    =
    {{#if this.isRevealed}}
      {{this.solution}}
    {{else}}
      ?
    {{/if}}
  </div>

  <div class="evaluate {{if this.isRevealed "revealed"}}">
    <button type="button" {{on "click" (fn this.evaluate true)}}>
      Yes
    </button>
    <button type="button" {{on "click" (fn this.evaluate false)}}>
      No
    </button>
  </div>
</div>