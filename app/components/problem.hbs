<div class="problem">
  <div class="first">
    {{this.first}}
  </div>
  <div class="operator">
    {{this.op}}
  </div>
  <div class="second">
    {{this.second}}
  </div>

  <div class="solution" {{on "click" this.reveal}}>
    =
    {{#if this.isRevealed}}
      {{this.solution}}
    {{else}}
      ?
    {{/if}}
  </div>

  <div class="evaluate {{if this.isRevealed "revealed"}}">
    <button type="button" {{on "click" (fn this.evaluate true)}}>
      Yes
    </button>
    <button type="button" {{on "click" (fn this.evaluate false)}}>
      No
    </button>
  </div>
</div>